\newcommand{\karnaugh}[5][1]
{
 \draw[step=1cm, black] (0,0) grid (4,4); %defining grids
 \draw(-0.1,0)--(-0.1,1)node[left]{#2}--(-0.1,2);
 \draw(4.1,1)--(4.1,2)node[right]{#3}--(4.1,3);
 \draw(2,-0.1)--(3,-0.1)node[below]{#4}--(4,-0.1);
 \draw(1,4.1)--(2,4.1)node[above]{#5}--(3,4.1);
\ifthenelse{\equal{#1}{4}}{\indicesd}{
\ifthenelse{\equal{#1}{3}}{\indicesc}{
\ifthenelse{\equal{#1}{2}}{\indicesb}{
\ifthenelse{\equal{#1}{2}}{\indicesb}{
\ifthenelse{\equal{#1}{1}}{\indicesa}{}
}}}}
}

